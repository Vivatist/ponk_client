<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nwl26p_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="64dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC107"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/nwl26p_text_view_temp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="#E91E63"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="+400"
            android:textSize="36sp"
            app:autoSizeTextType="none" />

        <ImageView
            android:id="@+id/nwl26p_imageview_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#CDDC39"
            tools:srcCompat="@drawable/ic_04n" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:layout_weight="50"
            android:background="#00BCD4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nwl26p_text_view_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nwl26p_text_view_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Влажность 43%"
                android:textSize="10sp"
                app:autoSizeTextType="none" />

            <TextView
                android:id="@+id/nwl26p_text_view_pressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Давление 854 мм р.с."
                android:textSize="10sp"
                app:autoSizeTextType="none" />

            <TextView
                android:id="@+id/nwl26p_text_view_wind_spd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ветер 6 м/с"
                android:textSize="10sp"
                app:autoSizeTextType="none" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>